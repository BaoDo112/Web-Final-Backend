generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  INTERVIEWER
  ADMIN
}

enum AuthProvider {
  LOCAL       // Email/Pass
  GOOGLE      // OAuth
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum VideoStatus {
  PROCESSING
  READY
  FAILED
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String?      // Nullable (cho Google Login)
  name        String?
  avatar      String?
  role        Role         @default(USER)
  provider    AuthProvider @default(LOCAL)
  providerId  String?      // Google ID
  createdAt   DateTime     @default(now())
  
  videos            Video[]
  bookingsAsUser    Booking[] @relation("UserBooking")
  bookingsAsMentor  Booking[] @relation("MentorBooking")
  interviewSessions InterviewSession[]

  @@index([email])
}

model Video {
  id          String      @id @default(uuid())
  title       String
  videoUrl    String      // URL Public từ Cloudflare R2
  status      VideoStatus @default(READY)
  uploaderId  String
  uploader    User        @relation(fields: [uploaderId], references: [id])
  createdAt   DateTime    @default(now())
}

model Booking {
  id            String        @id @default(uuid())
  startTime     DateTime
  endTime       DateTime
  status        BookingStatus @default(PENDING)
  meetingLink   String?       // P2P Link (WebRTC)
  
  userId        String
  user          User          @relation("UserBooking", fields: [userId], references: [id])
  
  mentorId      String
  mentor        User          @relation("MentorBooking", fields: [mentorId], references: [id])
  
  createdAt     DateTime      @default(now())

  // Constraint: Chặn trùng lịch ở cấp Database
  @@unique([mentorId, startTime]) 
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum SessionStatus {
  STARTED
  COMPLETED
}

enum SessionType {
  MOCK
  PRACTICE
}

model Question {
  id         String     @id @default(uuid())
  content    String
  difficulty Difficulty
  category   String
  tags       String[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  interviewResponses InterviewResponse[]
}

model InterviewSession {
  id        String        @id @default(uuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  status    SessionStatus @default(STARTED)
  type      SessionType   @default(MOCK)
  createdAt DateTime      @default(now())
  endedAt   DateTime?

  responses InterviewResponse[]
}

model InterviewResponse {
  id         String           @id @default(uuid())
  sessionId  String
  session    InterviewSession @relation(fields: [sessionId], references: [id])
  questionId String
  question   Question         @relation(fields: [questionId], references: [id])
  videoUrl   String?
  audioUrl   String?
  transcript String?
  createdAt  DateTime         @default(now())

  feedback Feedback?
}

model Feedback {
  id         String            @id @default(uuid())
  responseId String            @unique
  response   InterviewResponse @relation(fields: [responseId], references: [id])
  score      Int
  critique   String // JSON string or plain text
  createdAt  DateTime          @default(now())
}
